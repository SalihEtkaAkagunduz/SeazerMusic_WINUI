<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="seazer_music.CustomControls.BasicListItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:seazer_music.CustomControls"
    xmlns:models="using:seazer_music.Class"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Başlık -->
        <TextBlock
            Grid.Row="0"
            Margin="35,0,0,15"
            FontSize="16"
            FontWeight="Bold"
            Text="{x:Bind Title, Mode=OneWay}" />

        <Grid Margin="0,0, 0,35"  Grid.Row="1" PointerEntered="Grid_PointerEntered" PointerExited="Grid_PointerExited">

            <!-- Sol Buton -->
            <Button

                Canvas.ZIndex="3"
                x:Name="BtnLeft"
                Width="24"
                Height="50"
                Margin="6,0,0,0"
                Padding="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Background="#333"
                Click="BtnLeft_Click"
                Foreground="White"
                Visibility="Collapsed">
                <FontIcon
                    FontSize="23"
                    Foreground="LightGray"
                    Glyph="&#xE76B;" />
            </Button>

            <!-- ScrollViewer ve Liste -->
            <ScrollViewer ViewChanged="CardScrollViewer_ViewChanged"
                          Canvas.ZIndex="1"
                          x:Name="CardScrollViewer"
                          Padding="35,0,35,15"
                          HorizontalScrollBarVisibility="Hidden"
                          HorizontalScrollMode="Disabled"
                          IsHorizontalRailEnabled="False"
                          IsHorizontalScrollChainingEnabled="False"
                          IsVerticalRailEnabled="False"
                          IsVerticalScrollChainingEnabled="False"
                          VerticalScrollBarVisibility="Disabled"
                          VerticalScrollMode="Disabled"
                          ManipulationMode="System"
                          ZoomMode="Disabled">

                <ItemsRepeater ItemsSource="{x:Bind Items, Mode=OneWay}">
                    <ItemsRepeater.ItemTemplate>
                        <DataTemplate x:DataType="models:BasicList">
                            <Grid>
                                  <StackPanel CanDrag="True"  Width="220" Margin="0,0,24,0">
                                <Border Width="220" Height="220" CornerRadius="10">
                                    <Image Source="{x:Bind Image}" Width="220" Height="220" Stretch="UniformToFill" />
                                </Border>
                                <TextBlock Margin="0,5,0,0" HorizontalAlignment="Left" FontSize="14" Foreground="White" Text="{x:Bind Title}" />
                            </StackPanel>
                                <Grid Opacity="0"  Background="Transparent" PointerEntered="Item_PointerEntered" PointerExited="Item_PointerExited">
                                    <Border
          x:Name="hoverborder"
          Background="#222"
          CornerRadius="10"
          Opacity="0.4" />
                                    <Grid>
                                        <Button
              Width="32"
              Height="32"
              Margin="0,0,35,35"
              Padding="0"
              HorizontalAlignment="Right"
              VerticalAlignment="Bottom"
              CornerRadius="111">
                                            <Button.Flyout >
                                                <MenuFlyout   Placement="RightEdgeAlignedTop">
                                                    <MenuFlyoutItem Text="Arşiv'e Ekle" />

                                                    <!-- Listeye Ekle Alt Menüsü -->
                                                    <MenuFlyoutSubItem Text="Listeye Ekle">
                                                        <MenuFlyoutItem Text="değerlendirme">
                                                            <MenuFlyoutItem.Icon>
                                                                <SymbolIcon Symbol="MusicInfo"/>
                                                            </MenuFlyoutItem.Icon>
                                                        </MenuFlyoutItem>
                                                        <MenuFlyoutItem Text="Ders +">
                                                            <MenuFlyoutItem.Icon>
                                                                <SymbolIcon Symbol="MusicInfo"/>
                                                            </MenuFlyoutItem.Icon>
                                                        </MenuFlyoutItem>
                                                        <MenuFlyoutItem Text="Ders 1.0">
                                                            <MenuFlyoutItem.Icon>
                                                                <SymbolIcon Symbol="MusicInfo"/>
                                                            </MenuFlyoutItem.Icon>
                                                        </MenuFlyoutItem>
                                                        <MenuFlyoutItem Text="Ders 2.0">
                                                            <MenuFlyoutItem.Icon>
                                                                <SymbolIcon Symbol="MusicInfo"/>
                                                            </MenuFlyoutItem.Icon>
                                                        </MenuFlyoutItem>
                                                        <MenuFlyoutItem Text="Ders 3.0">
                                                            <MenuFlyoutItem.Icon>
                                                                <SymbolIcon Symbol="MusicInfo"/>
                                                            </MenuFlyoutItem.Icon>
                                                        </MenuFlyoutItem>
                                                        <MenuFlyoutItem Text="Ders 4.0">
                                                            <MenuFlyoutItem.Icon>
                                                                <SymbolIcon Symbol="MusicInfo"/>
                                                            </MenuFlyoutItem.Icon>
                                                        </MenuFlyoutItem>
                                                        <MenuFlyoutItem Text="Ders 4.2">
                                                            <MenuFlyoutItem.Icon>
                                                                <SymbolIcon Symbol="MusicInfo"/>
                                                            </MenuFlyoutItem.Icon>
                                                        </MenuFlyoutItem>
                                                        <MenuFlyoutItem Text="fr">
                                                            <MenuFlyoutItem.Icon>
                                                                <SymbolIcon Symbol="MusicInfo"/>
                                                            </MenuFlyoutItem.Icon>
                                                        </MenuFlyoutItem>
                                                        <MenuFlyoutItem Text="kk">
                                                            <MenuFlyoutItem.Icon>
                                                                <SymbolIcon Symbol="MusicInfo"/>
                                                            </MenuFlyoutItem.Icon>
                                                        </MenuFlyoutItem>
                                                        <MenuFlyoutItem Text="kol">
                                                            <MenuFlyoutItem.Icon>
                                                                <SymbolIcon Symbol="MusicInfo"/>
                                                            </MenuFlyoutItem.Icon>
                                                        </MenuFlyoutItem>
                                                        <MenuFlyoutItem Text="Liste">
                                                            <MenuFlyoutItem.Icon>
                                                                <SymbolIcon Symbol="MusicInfo"/>
                                                            </MenuFlyoutItem.Icon>
                                                        </MenuFlyoutItem>
                                                        <MenuFlyoutItem Text="Liste 2">
                                                            <MenuFlyoutItem.Icon>
                                                                <SymbolIcon Symbol="MusicInfo"/>
                                                            </MenuFlyoutItem.Icon>
                                                        </MenuFlyoutItem>
                                                        <MenuFlyoutItem Text="Motivasyon">
                                                            <MenuFlyoutItem.Icon>
                                                                <SymbolIcon Symbol="MusicInfo"/>
                                                            </MenuFlyoutItem.Icon>
                                                        </MenuFlyoutItem>
                                                        <MenuFlyoutItem Text="ses kalite ölçme">
                                                            <MenuFlyoutItem.Icon>
                                                                <SymbolIcon Symbol="MusicInfo"/>
                                                            </MenuFlyoutItem.Icon>
                                                        </MenuFlyoutItem>
                                                        <MenuFlyoutItem Text="Shazam Şarkılarım">
                                                            <MenuFlyoutItem.Icon>
                                                                <SymbolIcon Symbol="MusicInfo"/>
                                                            </MenuFlyoutItem.Icon>
                                                        </MenuFlyoutItem>
                                                        <MenuFlyoutItem Text="son 20 gün aaaaaa">
                                                            <MenuFlyoutItem.Icon>
                                                                <SymbolIcon Symbol="MusicInfo"/>
                                                            </MenuFlyoutItem.Icon>
                                                        </MenuFlyoutItem>
                                                        <MenuFlyoutItem Text="Succession">
                                                            <MenuFlyoutItem.Icon>
                                                                <SymbolIcon Symbol="MusicInfo"/>
                                                            </MenuFlyoutItem.Icon>
                                                        </MenuFlyoutItem>
                                                        <MenuFlyoutItem Text="Zö">
                                                            <MenuFlyoutItem.Icon>
                                                                <SymbolIcon Symbol="MusicInfo"/>
                                                            </MenuFlyoutItem.Icon>
                                                        </MenuFlyoutItem>
                                                        <MenuFlyoutItem Text="Zülal">
                                                            <MenuFlyoutItem.Icon>
                                                                <SymbolIcon Symbol="MusicInfo"/>
                                                            </MenuFlyoutItem.Icon>
                                                        </MenuFlyoutItem>
                                                    </MenuFlyoutSubItem>
                                                    <MenuFlyoutItem MinWidth="300" Text="Oynat: &quot;Yüksek Rotasyon&quot;" />
                                                    <MenuFlyoutItem Text="Karıştır: &quot;Yüksek Rotasyon&quot;" />
                                                    <MenuFlyoutItem Text="Sıradaki Yap" />
                                                    <MenuFlyoutItem Text="En Son Çal" />

                                                    <MenuFlyoutSeparator/>

                                                    <MenuFlyoutItem Text="Favori" />
                                                    <MenuFlyoutItem Text="Daha Az Öner" />

                                                    <MenuFlyoutSeparator/>

                                                    <MenuFlyoutSubItem Text="Paylaş">
                                                        <MenuFlyoutItem Text="Bağlantıyı Kopyala"/>
                                                        <MenuFlyoutItem Text="Mesajla Gönder"/>
                                                    </MenuFlyoutSubItem>

                                                    <MenuFlyoutItem Text="Kopyala" KeyboardAcceleratorTextOverride="Ctrl+C" />
                                                </MenuFlyout>
                                            </Button.Flyout>
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Grid>
                                                        <!--  Arka plan  -->
                                                        <Border
                              x:Name="BackgroundBorder"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch"
                              Background="#444"
                              CornerRadius="111"
                              Opacity="0.8" />

                                                        <!--  İkon  -->
                                                        <FontIcon
                              x:Name="Icon"
                              Margin="1,0,0,0"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              FontSize="19"
                              Foreground="White"
                              Glyph="&#xE712;" />

                                                        <!--  Görsel Durumlar  -->
                                                        <VisualStateManager.VisualStateGroups>
                                                            <VisualStateGroup x:Name="CommonStates">

                                                                <VisualState x:Name="Normal" />

                                                                <VisualState x:Name="PointerOver">
                                                                    <Storyboard>
                                                                        <!--  Arka plan rengi açık gri olsun  -->
                                                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="BackgroundBorder" Storyboard.TargetProperty="Background">
                                                                            <DiscreteObjectKeyFrame KeyTime="0" Value="#55BFF6" />
                                                                        </ObjectAnimationUsingKeyFrames>
                                                                    </Storyboard>
                                                                </VisualState>

                                                                <VisualState x:Name="Pressed">
                                                                    <Storyboard>
                                                                        <!--  Tıklanınca daha koyu bir gri  -->
                                                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="BackgroundBorder" Storyboard.TargetProperty="Background">
                                                                            <DiscreteObjectKeyFrame KeyTime="0" Value="Gray" />
                                                                        </ObjectAnimationUsingKeyFrames>
                                                                    </Storyboard>
                                                                </VisualState>

                                                            </VisualStateGroup>
                                                        </VisualStateManager.VisualStateGroups>
                                                    </Grid>
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>
                                        <Button
              Width="32"
              Height="32"
              Margin="10,0,0,35"
              Padding="0"
              HorizontalAlignment="Left"
              VerticalAlignment="Bottom"
              CornerRadius="111">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Grid>
                                                        <!--  Arka plan  -->
                                                        <Border
                              x:Name="BackgroundBorder"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch"
                              Background="#444"
                              CornerRadius="111"
                              Opacity="0.8" />

                                                        <!--  İkon  -->
                                                        <FontIcon
                              x:Name="Icon"
                              Margin="1,0,0,0"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              FontSize="15"
                              Foreground="White"
                              Glyph="&#xF5B0;" />

                                                        <!--  Görsel Durumlar  -->
                                                        <VisualStateManager.VisualStateGroups>
                                                            <VisualStateGroup x:Name="CommonStates">

                                                                <VisualState x:Name="Normal" />

                                                                <VisualState x:Name="PointerOver">
                                                                    <Storyboard>
                                                                        <!--  Arka plan rengi açık gri olsun  -->
                                                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="BackgroundBorder" Storyboard.TargetProperty="Background">
                                                                            <DiscreteObjectKeyFrame KeyTime="0" Value="#55BFF6" />
                                                                        </ObjectAnimationUsingKeyFrames>
                                                                    </Storyboard>
                                                                </VisualState>

                                                                <VisualState x:Name="Pressed">
                                                                    <Storyboard>
                                                                        <!--  Tıklanınca daha koyu bir gri  -->
                                                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="BackgroundBorder" Storyboard.TargetProperty="Background">
                                                                            <DiscreteObjectKeyFrame KeyTime="0" Value="Gray" />
                                                                        </ObjectAnimationUsingKeyFrames>
                                                                    </Storyboard>
                                                                </VisualState>

                                                            </VisualStateGroup>
                                                        </VisualStateManager.VisualStateGroups>
                                                    </Grid>
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>
                                    </Grid>
                                </Grid>


                            </Grid>
                          
                        </DataTemplate>
                    </ItemsRepeater.ItemTemplate>
                    <ItemsRepeater.Layout>
                        <StackLayout Orientation="Horizontal" />
                    </ItemsRepeater.Layout>
                </ItemsRepeater>
            </ScrollViewer>

            <!-- Sağ Buton -->
            <Button
                Canvas.ZIndex="6"
                x:Name="BtnRight"
                Width="24"
                Height="50"
                Margin="0,0,6,0"
                Padding="0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Background="#333"
                Click="BtnRight_Click"
                Foreground="White"
                Visibility="Collapsed">
                <FontIcon
                    FontSize="23"
                    Foreground="LightGray"
                    Glyph="&#xE76C;" />
            </Button>
        </Grid>
    </Grid>
</UserControl>